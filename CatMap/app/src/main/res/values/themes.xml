<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Default (Light) Theme -->
    <style name="Theme.CatMap" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_600</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorTertiary">@color/black</item>
        <item name="backgroundColor">@color/gray_100</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.CatMap.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorSecondary">@color/gray_900</item>
        <item name="colorTertiary">@color/gray_700</item>
        <item name="backgroundColor">@color/gray_800</item>
        <item name="colorOnPrimary">@color/gray_100</item>
        <item name="colorOnBackground">@color/gray_100</item>
    </style>

    <!-- High Contrast Mode -->
    <style name="Theme.CatMap.HighContrast" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/yellow_700</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorTertiary">@color/white</item>
        <item name="backgroundColor">@color/yellow_100</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
    </style>
</resources>
