<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="16sp"
            android:textColor="@android:color/holo_red_dark"
            android:minHeight="48dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"/>

        <View
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvAdd"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textSize="16sp"
            android:textColor="@android:color/holo_blue_dark"
            android:minHeight="48dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            />
    </LinearLayout>


    <!-- Segmented Selection: Class | Event -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardCornerRadius="12dp"
        app:strokeWidth="1dp"
        app:strokeColor="?attr/colorPrimary"
        android:layout_marginBottom="16dp">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleGroupType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:selectionRequired="true"
            app:checkedButton="@id/btnClass"
            app:singleSelection="true"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClass"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="?attr/colorSurface"
                android:text="Class"
                android:clickable="true"
                android:focusable="true"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEvent"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="?attr/colorSurface"
                android:text="Event"
                android:clickable="true"
                android:focusable="true"/>
        </com.google.android.material.button.MaterialButtonToggleGroup>

    </com.google.android.material.card.MaterialCardView>

    <!-- Inputs Section (Title & Location) -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardCornerRadius="12dp"
        app:strokeWidth="1dp"
        app:strokeColor="?attr/colorPrimary"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="middle"
            android:divider="?attr/colorOnSurface"
            android:dividerPadding="12dp">

            <!-- Title Input -->
            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:padding="12dp"
                android:background="?android:attr/selectableItemBackground"
                android:inputType="text"/>

            <!-- Location Input -->
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Location"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableEnd="@android:drawable/ic_menu_mapmode"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Time Selection (Start & End Time) -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardCornerRadius="12dp"
        app:strokeWidth="1dp"
        app:strokeColor="?attr/colorPrimary"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="middle"
            android:divider="?attr/colorOnSurface"
            android:dividerPadding="12dp">

            <!-- Start Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:onClick="selectStartTime"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start Time"
                    android:textAppearance="?attr/textAppearanceBodyLarge"/>

                <TextView
                    android:id="@+id/tvStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select"
                    android:textAppearance="?attr/textAppearanceBodyLarge"/>
            </LinearLayout>

            <!-- End Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:onClick="selectEndTime"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="End Time"
                    android:textAppearance="?attr/textAppearanceBodyLarge"/>

                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select"
                    android:textAppearance="?attr/textAppearanceBodyLarge"/>
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Notifications & Repeat -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardCornerRadius="12dp"
        app:strokeWidth="1dp"
        app:strokeColor="?attr/colorPrimary"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="middle"
            android:divider="?attr/colorOnSurface"
            android:dividerPadding="12dp">

            <!-- Repeat Toggle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Repeat"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:paddingStart="12dp"/>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switchRepeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="12dp"/>
            </LinearLayout>

            <!-- Repeat Options (Initially Hidden) -->
            <LinearLayout
                android:id="@+id/repeatOptionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:showDividers="middle"
                android:divider="?attr/colorOnSurface"
                android:visibility="gone"
                >

                <!-- Days Selection -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repeat On:"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:paddingBottom="8dp"/>

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleGroupDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="false"
                    android:paddingVertical="8dp"
                    >

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="M"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="T"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnWed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="W"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnThu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Th"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFri"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="F"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sa"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSun"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="S"/>
                </com.google.android.material.button.MaterialButtonToggleGroup>

                <!-- End Date Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="selectEndDate"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="End Date"
                        android:textAppearance="?attr/textAppearanceBodyLarge"/>

                    <TextView
                        android:id="@+id/tvEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select"
                        android:textAppearance="?attr/textAppearanceBodyLarge"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
