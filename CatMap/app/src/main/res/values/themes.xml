<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CatMap" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/lightScheme_Dark</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorTertiary">@color/black</item>
        <item name="colorSurface">@color/lightScheme_Dark</item>

        <!-- Background Colors -->
        <item name="backgroundColor">@color/lightScheme_Light</item>

        <!-- Text Colors -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnBackground">@color/lightScheme_Light</item>

        <!-- Material 3 required theme attributes -->
        <item name="colorPrimaryContainer">@color/lightScheme_Light</item>
        <item name="colorOnPrimaryContainer">@color/black</item>

        <item name="colorSecondaryContainer">@color/lightScheme_Dark</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <item name="colorTertiaryContainer">@color/lightScheme_Light</item>
        <item name="colorOnTertiaryContainer">@color/black</item>

        <item name="colorSurfaceVariant">@color/lightScheme_Dark</item>
        <item name="colorOnSurfaceVariant">@color/white</item>


    </style>

    <style name="Theme.CatMap" parent="Base.Theme.CatMap" />
</resources>