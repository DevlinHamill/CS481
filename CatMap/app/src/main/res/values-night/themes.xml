<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CatMap" parent="Base.Theme.CatMap">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/darkScheme_primary</item>
        <item name="colorSecondary">@color/darkScheme_MidDark</item>
        <item name="colorTertiary">@color/darkScheme_Mid</item>
        <item name="colorSurface">@color/darkScheme_MidLight</item>

        <!-- Background Colors -->
        <item name="backgroundColor">@color/darkScheme_Dark</item>

        <!-- Text Colors -->
        <item name="colorOnPrimary">@color/darkScheme_primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnBackground">@color/darkScheme_primary</item>

        <!-- Material 3 required theme attributes -->
        <item name="colorPrimaryContainer">@color/darkScheme_Light</item>
        <item name="colorOnPrimaryContainer">@color/black</item>

        <item name="colorSecondaryContainer">@color/darkScheme_Dark</item>
        <item name="colorOnSecondaryContainer">@color/darkScheme_primary</item>

        <item name="colorTertiaryContainer">@color/darkScheme_Light</item>
        <item name="colorOnTertiaryContainer">@color/black</item>

        <item name="colorSurfaceVariant">@color/darkScheme_Dark</item>
        <item name="colorOnSurfaceVariant">@color/darkScheme_primary</item>
    </style>
</resources>