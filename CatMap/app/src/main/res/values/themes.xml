<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light Theme -->
    <style name="Base.Theme.CatMap" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/blue_600</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorTertiary">@color/black</item>

        <!-- Background Colors -->
        <item name="backgroundColor">@color/gray_100</item>

        <!-- Text Colors -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
    </style>

    <!-- Dark Theme -->
    <style name="Base.Theme.CatMap.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorSecondary">@color/gray_900</item>
        <item name="colorTertiary">@color/gray_700</item>

        <!-- Background Colors -->
        <item name="backgroundColor">@color/gray_800</item>

        <!-- Text Colors -->
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
    </style>

    <!-- Themes for switching -->
    <style name="Theme.CatMap" parent="Base.Theme.CatMap" />
    <style name="Theme.CatMap.Dark" parent="Base.Theme.CatMap.Dark" />
</resources>
